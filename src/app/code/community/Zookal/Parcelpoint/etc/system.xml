<?xml version="1.0"?>
<config>
    <tabs>
        <parcelpoint translate="label" module="zookalparcelpoint">
            <label>Parcelpoint</label>
            <sort_order>0</sort_order>
        </parcelpoint>
    </tabs>
    <sections>
        <parcelpointapi translate="label" module="zookalparcelpoint">
            <label>Parcelpoint Api</label>
            <tab>parcelpoint</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <api_key>
                            <label>API key</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Parcelpoint API key]]></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </api_key>
                        <testing_mode translate="label">
                            <label>Testing mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </testing_mode>
                    </fields>
                </general>
                <booking translate="label">
                    <label>Booking</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <scheduler_cron_expr>
                            <label>Cron run schedule</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Cron expression. (E.g. "* 23 * * *") to run everyday at 2300 hours]]></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </scheduler_cron_expr>
                        <excludetracking translate="label">
                            <label>Exclude orders without tracking number</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </excludetracking>
                    </fields>
                </booking>
            </groups>
        </parcelpointapi>
    </sections>
</config>
